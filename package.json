{
  "name": "starlight",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "build": "turbo build",
    "build:plugin": "turbo build --filter='./plugins/*'",
    "build:package": "turbo build --filter='./packages/*'",
    "build:deps": "npm run build:package && npm run build:plugin",
    "update": "taze -w -r"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "taze": "^0.13.3",
    "typescript": "^5.4.3"
  },
  "workspaces": [
    "./packages/*",
    "./crates/*",
    "./website",
    "./app",
    "./docs",
    "./plugins/*"
  ],
  "packageManager": "yarn@4.1.1"
}
