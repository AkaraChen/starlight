{
  "name": "starlight",
  "devDependencies": {
    "@akrc/ci-toolkit": "^1.0.1",
    "@biomejs/biome": "1.6.3",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^0.33.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-unicorn": "^51.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pinst": "^3.0.0",
    "prettier": "^3.2.5",
    "syncpack": "^12.3.0",
    "taze": "^0.13.3",
    "typescript": "5.3.3",
    "vitest": "^1.4.0"
  },
  "packageManager": "yarn@4.1.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --filter '!./{plugins,website}'",
    "format": "npm run format:source && npm run format:syncpack && npm run format:config",
    "format:config": "prettier --write **/*.{yml,yaml,md}",
    "format:source": "biome check --apply .",
    "format:syncpack": "syncpack format",
    "lint": "eslint .",
    "prepare": "husky",
    "test": "vitest",
    "update": "taze -w -r"
  },
  "workspaces": ["./packages/**", "./website", "./app", "./docs", "./plugins/*"]
}
