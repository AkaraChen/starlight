{
  "name": "@starlight-app/app",
  "description": "An Electron application with React and TypeScript",
  "version": "1.0.0",
  "author": {
    "name": "AkaraChen"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@starlight-app/plugin-sdk": "1.0.0",
    "@starlight/plugin-utils": "1.0.0",
    "app-launcher": "1.0.0",
    "clsx": "^2.1.0",
    "debug": "^4.3.4",
    "electron-updater": "^6.1.8",
    "emoji-regex": "^10.3.0",
    "fuse.js": "^7.0.0",
    "hello-world": "1.0.0",
    "jotai": "^2.7.2",
    "lucide-react": "^0.365.0",
    "radash": "^12.1.0",
    "react-router-dom": "^6.22.3",
    "rxjs": "^7.8.1",
    "scroll-into-view-if-needed": "^3.1.0",
    "window-manager": "1.0.0"
  },
  "devDependencies": {
    "@akrc/ci-toolkit": "^1.2.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "electron": "29.3.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.1.0",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supports-color": "^9.4.0",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.4",
    "vite": "^5.2.8"
  },
  "main": "./out/main/index.js",
  "packageManager": "yarn@4.1.1",
  "scripts": {
    "build": "npm run check && electron-vite build",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "check": "npm run check:node && npm run check:web",
    "check:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "check:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "dev": "cross-env DEBUG=\"starlight*\" DEBUG_COLORS=1 electron-vite dev",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "postinstall": "skip-in-ci yarn electron-builder install-app-deps",
    "start": "electron-vite preview"
  }
}
