{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": false
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingComma": "all",
      "quoteStyle": "single"
    }
  },
  "overrides": [
    {
      "include": ["**/*.astro"],
      "javascript": {
        "formatter": {
          "trailingComma": "none"
        }
      }
    }
  ]
}
